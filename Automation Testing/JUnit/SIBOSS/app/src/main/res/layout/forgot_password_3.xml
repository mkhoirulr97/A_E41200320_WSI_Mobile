<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/pacifico"
            android:text="SI-BOSS"
            android:textColor="@drawable/gradient_bg"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/tv1"
            android:fontFamily="@font/italianno"
            android:gravity="center_vertical"
            android:text="Express"
            android:textColor="@drawable/gradient_bg"
            android:textSize="24sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative2"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Lupa kata sandi?"
            android:textColor="@color/textHeadline"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv2"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Silahkan buat ulang kata sandi anda"
            android:textColor="@color/textDescription"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:text="@string/password_baru"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal" />

        <EditText
            android:id="@id/et1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv4"
            android:layout_marginTop="2dp"
            android:background="@drawable/edittext_bg"
            android:drawablePadding="16dp"
            android:fontFamily="@font/roboto"
            android:hint="Masukan kata sandi baru"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="10dp"
            android:text="Gunakan sandi yang kuat"
            android:textColor="@color/textDescription"
            android:textSize="12sp"
            android:textStyle="normal"
            android:fontFamily="@font/roboto"
            android:layout_below="@+id/et1"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:alpha="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@id/relative3">

        <Button
            android:layout_width="137dp"
            android:layout_height="41dp"
            android:layout_marginHorizontal="100dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:background="@drawable/round_btn"
            android:text="Kirim"
            android:textAllCaps="true"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>