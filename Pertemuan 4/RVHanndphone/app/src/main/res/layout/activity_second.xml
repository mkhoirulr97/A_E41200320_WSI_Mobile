<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

  //membuat komponen dengan linearlayout untuk memudahkan dalam mengatur desain atau letak
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      tools:ignore="MissingConstraints">

    //membuat komponen imageview
    <ImageView
        android:id="@+id/mainimageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/apple" />

    //membuat komponen textview title
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="532dp" />

    //membuat komponen textview description
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20dp"
        android:textStyle="normal"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="593dp" />

  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>